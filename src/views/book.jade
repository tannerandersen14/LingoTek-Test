div(class="container")
  h1(class="page-header") Contact Book
  div
    p This is the contact book
    p It's pretty great
    p Is the luh?
    p {{data}}
    p {{localStorageData}}
  form(ng-submit="addContact()")
    input(type="text" placeholder="First Name" class="form-control" ng-model="newContact.firstName")
    input(type="text" placeholder="Last Name" class="form-control" ng-model="newContact.lastName")
    input(type="text" placeholder="Phone Number" class="form-control" ng-model="newContact.phoneNumber")
    input(type="text" placeholder="Email" class="form-control" ng-model="newContact.email")
    button(type="submit" class="btn btn-primary") Add Contact
  div(ng-repeat="contact in contactArray")
    h3 {{contact.firstName}} {{contact.lastName}}
    p {{contact.phoneNumber}} {{contact.email}}
    
  
